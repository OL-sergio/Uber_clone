<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white_100"
    android:padding="@dimen/_16sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView_passengerName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/nome_do_passageiro"
        android:textColor="@color/gunmetal_100"
        android:textSize="@dimen/_22sdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView_requestDistance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="@string/_0km_aproximadamente"
        android:textColor="@color/gunmetal_100"
        android:textSize="@dimen/_16sdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView_passengerName"
        app:layout_constraintStart_toStartOf="@+id/textView_passengerName"
        app:layout_constraintTop_toBottomOf="@+id/textView_passengerName" />


</androidx.constraintlayout.widget.ConstraintLayout>